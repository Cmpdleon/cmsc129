            <div id="festivals-header">
                <div id="transparent-background-festivals">
                    <div id="festivals-header-group">
                        <p class="font-white" id="second-title">CULTURES AND FESTIVALS </p>
                        <p class="font-white" id="content"><span class="font-peach">Potter ipsum</span> wand elf
                            parchment wingardium.
                            Wand betrayal parseltongue soul detention elf lion back his.
                            Dead bertie hat kedavra aragog gnomes wand palominos erumpent robes.
                            Hair stroke time-turner newt fantastic bred erised pigwidgeon mine rva.
                            Bat forbidden cabbage parchment sunshine.
                            Bag moon ground moon quidditch sight grim.
                        </p>
                    </div>
                </div>
            </div>
            <div id="festivals-body">
                <div id="festivals-body-group">
                    <div id="body-header">
                        <p class="font-black" id="third-title">THE BEST EVENTS IN <span class="font-peach">ILOILO</span>
                        </p>
                        <!-- <div class="filter-row">
                            <p class="font-black">Sort By:</p>
                            <button>Name</button>
                            <button>Date</button>
                        </div> -->
                    </div>
                    <!-- Just a dummy to show -->
                    <div id="wrap">
                        <% var festivals = festivals %>
                        <% for (index in festivals){%>
                            <div id="card-group">
                                <div class="card-image">
                                    <img src=<%= festivals[index]['Images Attached']%> />
                                </div>
                                <div class="card-body">
                                  <h2 class="font-black" id="content"><%= festivals[index]['Title']%></h5>  
                                  <p class="font-black" id="content"><%= festivals[index]['Description'] %></p>
                                  <% var link = festivals[index]['Link']%>
                                  <% var card_state = 'buttoncard'%>
                                  <% if(!link){%>
                                    <% link = '#'%>
                                    <% card_state = 'disabled_buttoncard'%>
                                  <% } %>
                                  <a href=<%= link%> target="_blank" class=<%= card_state%>>Check Festivals</a>
                                
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
</body>

</html>