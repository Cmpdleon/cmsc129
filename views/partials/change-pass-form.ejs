<input type="password" id="password" name="password" required><br>
<label for="repassword" class="font-black" id="content">Confirm New Password:</label><br>
<input type="password" id="repassword" name="repassword" required><br>
<span class="font-white" id="error">
    <% if (messages.error){ %>
        <%= messages.error%>
            <% } %>
</span>

